<div class="banner mb-3" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.pexels.com/photos/109669/pexels-photo-109669.jpeg?auto=compress&cs=tinysrgb&h=750&w=1260);">
  <div class="container">
    <h1> Bookmark list </h1>
    <p>Save any bookmark of movies</p>
    <%= link_to "Create new bookmark", new_list_bookmark_path(@list), class:"btn btn-primary" %>
  </div>
</div>

<div class="container d-grid justify-content-center">
  <% @list.bookmarks.each do |bookmark| %>
    <div class="d-flex align-items-center mb-3">
      <% movie = Movie.find(bookmark.movie_id) %>
      <%= link_to bookmark_path(bookmark[:id]), method: :delete, class:"mr-2"  do %>
        <i class="far fa-trash-alt"></i>
      <% end %>
      <div class="card-product flex-grow-1">
        <img src= "<%= movie.poster_url %>" />
        <div class="card-product-infos">
          <h3> <%= movie.title %> - <%= movie.rating %>/10</h3>
          <p> <%= movie.overview %> </p>
          <p><strong><%= bookmark.comment %></strong></p>
        </div>
      </div>
    </div>
  <% end %>
</div>
